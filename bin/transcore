#!/usr/bin/env ruby

require "transcore"

command = ARGV[0]

exit_code = 0

case command
when "transpose"
  ARGV.shift
  exit_code = Transcore::Command::Transpose.run(ARGV) || 0
when "convert"
  ARGV.shift
  exit_code = Transcore::Command::Convert.run(ARGV) || 0
else
  exit_code = Transcore::Command::Default.run(ARGV) || 0
  if exit_code == 2
    STDERR.puts "Invalid command: '#{command}'"
    exit_code = 1
  end
end

exit exit_code
